
@model IEnumerable<RepairShopDTO>


<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Is Approved</th>
            <th>Approve</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.IsApproved</td>
                <td>
                    @if (item.IsApproved)
                    {
                        <form asp-action="ApproveShop" method="post">
                            <input type="hidden" name="id" value="@item.Id">
                            <input type="submit" value="Disapprove" class="approve-button">
                        </form>
                    }
                    else
                    {
                        <form asp-action="ApproveShop" method="post">
                            <input type="hidden" name="id" value="@item.Id">
                            <input type="submit" value="Approve" class="approve-button">
                        </form>
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>



