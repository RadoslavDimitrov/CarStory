
@model IEnumerable<RepairShopDTO>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Is Approved</th>
            <th>Approve</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.IsApproved</td>
                <td>
                    <form asp-action="ApproveShop" method="post">
                        <input type="hidden" name="id" value="@item.Id">
                        <input type="submit" value="Approve">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

