@model RegisterUserFormModel

@{
    ViewBag.Title = "User register";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
        background-color: lightgray;
        border: 3px solid black;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: lightgreen;
    }

    .registerDiv{
        text-decoration-color: black;
    }
</style>

<div class="row col-m">
    <h3 class="mb-3">@ViewBag.Title</h3>
</div>

<div id="registerDiv" class="row col-mt-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <table>
            <tr>
                <th><label asp-for="Username"><b>Name</b></label></th>
                <td><input asp-for="Username" class="form-control"></td>
                <td><span asp-validation-for="Username" class="small text-danger"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Password"><b>Password</b></label></th>
                <td><input asp-for="Password" class="form-control" type="password"></td>
                <td><span asp-validation-for="Password" class="small text-danger"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Email"><b>Email</b></label></th>
                <td><input asp-for="Email" class="form-control"></td>
                <td><span asp-validation-for="Email" class="small text-danger"></span></td>
            </tr>
        </table>

        <input class="btn btn-primary mt-3" type="submit" value="Register" />
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}