@model LoginUserFormModel

@{
    ViewBag.Title = "User login";
}
<div class="loginDiv text-center">
    <div class="row col-mt-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username"><b>Name</b></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username">
                <span asp-validation-for="Username" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"><b>Password</b></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password">
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Login" />
            </div>
        </form>
    </div>
</div>

<div id="message">
    <div style="font-family: 'lobster', cursive">
        <span>&middot;</span>Almost there!<br />
    </div>
</div>


<style>
    .loginDiv {
        background-color: lightgray;
        border: 3px solid black;
    }

    #message{
        text-align: center;
        border: 3px solid black;
        background-color: rgba(144, 238, 144, 0.7);
        padding: 10px;
        margin-top: 20px;
        font-size: 50px
    }

</style>