@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class=“container”>
    <div class=“row”>
        <div class=“col-md-12”>
            <h1 class=“text-danger text-center display-1”>Error.</h1>
            <h2 class=“text-danger text-center”>An error occurred while processing your request.</h2>
            <h3 class=“text-danger text-center”>@Model.Description</h3>
            <div class="Error">@Model.Description</div>
        </div>
    </div>
    <div class=“row”>
        <div class=“col-md-12 text-center”>
            <a asp-controller=“@Model.ControllerName” asp-action=“@Model.ActionName” class=“btn btn-primary btn-lg”>Go Back</a>
        </div>
    </div>
</div>