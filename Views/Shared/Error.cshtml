@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class=“container”>
    <div class=“row”>
        <div class=“col-md-12”>
            <h1 class=“text-danger text-center display-1”>Error.</h1>
            <h2 class=“text-danger text-center”>An error occurred while processing your request.</h2>
            <div class="Error">@Model.Description</div>
        </div>
    </div>
    @if (TempData["ShopName"] != null)
    {
        <div class="row">
            <div class="col-md-12">
                <a asp-controller="RepairShop" asp-action="Index" asp-route-name="@TempData["ShopName"].ToString()">Visit shop</a>
            </div>
        </div>
    }
    <div class=“row”>
        <div class=“col-md-12 text-center”>
            <a asp-controller=@Model.ControllerName asp-action=@Model.ActionName class="btn btn-primary btn-lg">Go Back</a>
        </div>
    </div>
</div>